<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <h6 class="card-title">
          All boards
        </h6>
        <button class=" btn btn-sm btn-outline-success ms-auto" data-bs-toggle="modal" data-bs-target="#add_board_form">Add a new board</button>
      </div>
      <div class="list-group list-group-flush">
        <% @list_of_boards.each do |a_board| %>
          <a href="/boards/<%= a_board.id %>" class="list-group-item list-group-item-action d-flex">
            <%= a_board.name %> <i class="ms-auto fa-solid fa-chevron-right"></i>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="add_board_form" tabindex="-1" aria-labelledby="add_board_modal_Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5">New board</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/insert_board" method="post">
          <div class="mb-3">
            <label for="name_box" class="form-label">Name</label>
            <input type="text" class="form-control" id="name_box" name="query_name">
          </div>
          <div class="d-grid">
          <button class="btn btn-success">
            Add board
          </button>
        </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">Cancel</button>
      </div>
    </div>
  </div>
</div>
